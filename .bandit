# Bandit configuration file
# This file configures Bandit security checks for the project

# Skip specific tests that are false positives or acceptable in this context
# B101: assert_used - Acceptable in test files
# B404: import_subprocess - Acceptable for CLI testing
# B603: subprocess_without_shell_equals_true - Acceptable for controlled input
# B105: hardcoded_password_string - False positives for configuration values
skips: ['B101', 'B404', 'B603', 'B105']

# Exclude directories and files
exclude_dirs: ['tests', 'examples', 'docs', '.history', '.git']

# Set severity level (low, medium, high)
severity: medium

# Set confidence level (low, medium, high)
confidence: medium

# Output format
output_format: screen

# Number of processes to use
processes: 1
